<phpunit
    bootstrap="Bootstrap.php"
    colors="true"
    beStrictAboutTestsThatDoNotTestAnything="false"
>
    <testsuites>
        <testsuite name="Modules test">
            <directory>Tests/Modules</directory>
            <exclude>Tests/Modules/Db</exclude>
            <exclude>Tests/Modules/Trash</exclude>

            <exclude>Tests/Modules/Net/BackConnectTest.php</exclude>
            <exclude>Tests/Modules/Net/BindConnectTest.php</exclude>
            <exclude>Tests/Modules/Net/BindTest.php</exclude>
            <exclude>Tests/Modules/Net/DosTest.php</exclude>
            <exclude>Tests/Modules/Net/EmailValidatorTest.php</exclude>
            <exclude>Tests/Modules/Net/FtpDownloadTest.php</exclude>
            <exclude>Tests/Modules/Net/FtpUploadTest.php</exclude>
            <exclude>Tests/Modules/Net/IrcTest.php</exclude>
            <exclude>Tests/Modules/Net/MailTest.php</exclude>
            <exclude>Tests/Modules/Net/PortscannerTest.php</exclude>
            <exclude>Tests/Modules/Net/ProxyTest.php</exclude>
            <exclude>Tests/Modules/Net/SocketDownloadTest.php</exclude>
            <exclude>Tests/Modules/Net/SocketUploadTest.php</exclude>
        </testsuite>

        <testsuite name="Libs test">
            <directory>Tests/Lib</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">../Lib</directory>
            <directory suffix=".php">../Modules/Basic</directory>
            <directory suffix=".php">../Modules/Crack</directory>
            <directory suffix=".php">../Modules/Files</directory>
            <directory suffix=".php">../Modules/Net</directory>
            <directory suffix=".php">../Modules/Other</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="./Report" charset="UTF-8" yui="true" />
    </logging>

    <php>
        <!-- Enable debug mode in shell -->
        <server name="dev" value="1" />
        <server name="skip_modules" value="1" />
    </php>
</phpunit>
